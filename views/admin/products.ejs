    <%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/product-list.css">

    </head>
    <%- include('../includes/navigation.ejs')%>

        <body>
            <h1>this is the shop-products in the Shop Route PAGE </h1>
            <% if(prods.length> 0 ){%>
                <section class="product">
                    <%for(let product of prods) {%>
                        <div class="product_card">                                
                            <img src= <%=product.imageUrl %> alt="">
                            <h2>
                                <%= product.title %>
                            </h2>
                            <p class="price">
                                <%= product.price %> $
                            </p>
                            <p>                            
                                <%= product.description %>
                            </p>
                            
                            <a href="/shop-products">Details</a>
                            <%- include('../includes/add-to-cart.ejs',{product : product})%>
                            </div>
                            
                            <div class="cart-action">
                                <a href="/admin/edit-product/<%=product.id%>?edit=true">Edit</a>
                                <form action="/admin/delete-product" method="post">
                                    <input type="hidden" value="<%=product.id%>" name="productId">
                                    <button  class="btn" type="submit" href="/admin/delete-product">Delete</button>
                                </form>
                            </div>
                        <% }%>

                        
                </section>
                <%} else {%>
                    <h1>NO Product yet </h1>
                    <%}%>
                        <%-include('../includes/end.ejs')%>
        </body>

        </html>


