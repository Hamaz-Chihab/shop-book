    <%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/product-list.css">

    </head>
    <%- include('../includes/navigation.ejs')%>

        <body>
            <h1>this is the shop-products in the Shop Route PAGE </h1>
            <% if(prods.length> 0 ){%>
                <section class="product">
                    <%for(let product of prods) {%>
                        <div class="card" style="width: 18rem;">
                            <img src=<%=product.imageUrl %> class="card-img-top" alt="img">
                                <div class="card-body">
                                <h5 class="card-title"><%= product.title %></h5>
                                <p class="card-text"><%= product.price %> $</p>
                                <p class="card-text"><%= product.description %></p>

                                <div class="cart-action">
                                    <a href="/admin/edit-product/<%=product._id%>?edit=true" class="btn btn-warning">Edit</a>
                                    <form action="/admin/delete-product" method="post">
                                        <input type="hidden" value="<%=product._id%>" name="productId">
                                        <button  class="btn btn-danger" type="submit" href="/admin/delete-product">Delete</button>
                                    </form>
                                </div>
                            </div>
                            </div>
                        <% }%>

                        
                </section>
                <%} else {%>
                    <h1>NO Product yet </h1>
                    <%}%>
                        <%-include('../includes/end.ejs')%>
        </body>

        </html>


